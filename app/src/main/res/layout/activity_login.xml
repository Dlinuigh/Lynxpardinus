<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.LoginActivity">

    <ImageView
        android:id="@+id/accountIcon"
        android:layout_width="match_parent"
        android:scaleType="center"
        android:layout_height="160dp"
        android:contentDescription="heheda"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launcher" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:hint="昵称"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        app:layout_constraintTop_toBottomOf="@id/accountIcon"
        android:id="@+id/nickName"/>
    <EditText
        android:layout_width="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accountEmail"
        android:id="@+id/accountPhone"
        android:autofillHints=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sendPhoneCode"
        android:hint="电话"
        android:inputType="textEmailAddress|phone" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="邮箱"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sendEmailCode"
        app:layout_constraintTop_toBottomOf="@id/nickName"
        android:id="@+id/accountEmail"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendPhoneCode"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:text="发送验证码"
        app:layout_constraintStart_toEndOf="@+id/accountPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendEmailCode"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@+id/accountPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/code"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:autofillHints=""
        android:hint="验证码"
        android:inputType="numberPassword" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="可选密码"
        app:layout_constraintTop_toBottomOf="@id/code"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordAgain"
        android:inputType="textPassword"
        android:hint="确认密码"
        app:layout_constraintTop_toBottomOf="@id/password"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/divideLine"
        app:layout_constraintTop_toBottomOf="@+id/passwordAgain"
        android:text="登录方式"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendEmailCode"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:text="发送验证码"
        app:layout_constraintStart_toEndOf="@+id/accountEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickName"/>

    <ImageButton
        android:id="@+id/hwid_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/abc_vector_test"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nosignup"
        app:layout_constraintTop_toBottomOf="@+id/divideLine"
        android:contentDescription="华为账号验证登录" />

    <Button
        android:id="@+id/nosignup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        android:background="@drawable/abc_vector_test"
        app:layout_constraintStart_toEndOf="@+id/hwid_signin"
        app:layout_constraintTop_toBottomOf="@+id/divideLine" />
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/phone"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        app:layout_constraintEnd_toStartOf="@id/email"
        app:layout_constraintStart_toEndOf="@+id/nosignup"
        android:background="@drawable/abc_vector_test"
        app:layout_constraintTop_toBottomOf="@+id/divideLine"/>
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/email"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phone"
        android:background="@drawable/abc_vector_test"
        app:layout_constraintTop_toBottomOf="@+id/divideLine"/>
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:background="@drawable/abc_vector_test"
        android:id="@+id/signout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>