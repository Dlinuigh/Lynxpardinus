<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.PhoneActivity">
    <ImageView
        android:id="@+id/accountIcon"
        android:layout_width="match_parent"
        android:scaleType="center"
        android:layout_height="160dp"
        android:contentDescription="@string/app_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launcher" />
    <com.lynxpardinus.selfview.MyEditView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accountIcon"
        android:id="@+id/PhoneName"
        android:autofillHints=""
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textEmailAddress|phone" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendPhoneCode"
        android:text="@string/sendCode"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneName"/>
    <com.lynxpardinus.selfview.MyEditView
        app:layout_constraintTop_toBottomOf="@+id/PhoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/code"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:autofillHints=""
        android:inputType="number" />
    <com.lynxpardinus.selfview.MyEditView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/code"/>
    <com.lynxpardinus.selfview.MyEditView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordAgain"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regPhone"
        app:layout_constraintStart_toStartOf="parent"
        android:text="注册"
        app:layout_constraintTop_toBottomOf="@id/passwordAgain"
        app:layout_constraintEnd_toStartOf="@id/phone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        app:layout_constraintStart_toEndOf="@id/regPhone"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="登录"
        app:layout_constraintTop_toBottomOf="@+id/passwordAgain"/>
</androidx.constraintlayout.widget.ConstraintLayout>